<div class="rect">
	<h3>Sign in</h3>
  <hr	/>
	<div class="user-form">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		
			<%= f.label :login %>
		  <%= f.text_field :login %>

		  <%= f.label :password %>
		  <%= f.password_field :password %>
			<br />
		  <%= f.submit "Sign in",  class: "btn btn-large btn-primary", 
			             style: "width: 330px" %>
		<% end %>

		<%= render "links" %>
	</div>
</div>