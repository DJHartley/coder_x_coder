<%= provide :title, "Sign in" %>
<div class="rect">
	<h3>Sign x Sign in</h3>
	<hr />
	<div class="span-signup">

		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :name_or_email %>
			<%= f.text_field :name_or_email, class: "input-xxlarge input-signup" %><br />				
			<%= f.label :password %>
			<%= f.password_field :password, class: "input-xxlarge input-signup" %><br /><br />
			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
		
</div>
