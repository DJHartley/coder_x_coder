<%= form_for(@topic) do |f| %>


	<div class="inner bottomborder">
		<h3><%= locals[:info_title] %>
			<%= f.submit locals[:action_btn_title], class: "btn btn-post-topic" %>
		</h3>
	</div>
	<div class="inner bottomborder">
		<%= render 'shared/error_messages', object: f.object %>
	
		<%= f.text_field :title, class: "input-topic-title", placeholder: "Title" %>
		<%= f.text_area :content, class: "input-topic-content", placeholder: "Content" %>
	</div>
<% end %>
<div class="h-inner">
	<div class="grayfont link">
		<p><strong>Tips:</strong></p>
		<ul>
			<li>content can be empty.</li>
			<li>support <a href="http://daringfireball.net/projects/markdown/syntax" target="_blank" title="Markdown Syntax Documentation">markdown syntax.</a></li>
		</ul>
	</div>
</div>