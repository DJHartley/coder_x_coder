<%= form_for(@user) do |f| %>

	<%= render 'shared/error_messages', :object => f.object %>

	<%= f.label :name %>
	<%= f.text_field :name, class: "input-field" %><br />
	<%= f.label :email %>
	<%= f.text_field :email, class: "input-field" %><br />				
	<%= f.label :password %>
	<%= f.password_field :password, class: "input-field" %><br />
	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation, class: "input-field" %><br /><br />
	<%= f.submit submit_button_title, :action => "update", class: "btn btn-primary btn-large", 
	             style: "width: 330px" %>
<% end %>
